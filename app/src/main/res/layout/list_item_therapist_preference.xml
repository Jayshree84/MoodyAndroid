<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_10sdp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/circularstd_book"
        android:text="Stress"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bars"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_bars"
        app:tint="@color/brand_yellow" />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toStartOf="@id/iv_bars"
        android:background="@drawable/yellow_text_bg"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_12ssp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/DescCaptionTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignStart="@id/tv_title"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_toStartOf="@id/tv_order"
        android:lineSpacingMultiplier="1.2"
        android:text="desc sdfjkdf ksdfhksdfhkds ksdhfjskdfkdshfkjdshfdskjhf jkdsfhdsj hfdjshf fhjdhfdj hfjdh jjhfdjfhdjfhdj hdjfhdjfhd " />
</RelativeLayout>