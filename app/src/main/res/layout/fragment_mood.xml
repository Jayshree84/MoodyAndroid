<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:text="April 20, 2010"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_12ssp"
        android:layout_alignParentTop="true"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_date"
        android:fontFamily="@font/circularstd_black"
        android:gravity="center"
        android:text="@string/how_you_feel"
        android:textColor="@color/boarding_text"
        android:textSize="@dimen/_18ssp"
        android:textStyle="normal" />




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mood_normal"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        app:srcCompat="@drawable/mood_normal" />

    <TextView
        android:id="@+id/tv_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="5"
        android:layout_below="@id/tv_title"
        android:background="@drawable/badge_bg2"
        android:layout_alignEnd="@id/iv_mood_normal"
        android:padding="0dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mood_low"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/tv_title"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_toStartOf="@id/iv_mood_normal"
        app:srcCompat="@drawable/mood_low" />

    <TextView
        android:id="@+id/tv_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="5"
        android:layout_below="@id/tv_title"
        android:background="@drawable/badge_bg2"
        android:layout_alignEnd="@id/iv_mood_low"
        android:padding="0dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mood_worst"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/tv_title"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toStartOf="@id/iv_mood_low"
        app:srcCompat="@drawable/mood_worst" />

    <TextView
        android:id="@+id/tv_worst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="5"
        android:layout_below="@id/tv_title"
        android:background="@drawable/badge_bg2"
        android:layout_alignEnd="@id/iv_mood_worst"
        android:padding="0dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mood_high"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_toEndOf="@id/iv_mood_normal"
        app:srcCompat="@drawable/mood_high" />

    <TextView
        android:id="@+id/tv_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="5"
        android:layout_below="@id/tv_title"
        android:background="@drawable/badge_bg2"
        android:layout_alignEnd="@id/iv_mood_high"
        android:padding="0dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mood_elevated"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toEndOf="@id/iv_mood_high"
        app:srcCompat="@drawable/mood_elevated" />

    <TextView
        android:id="@+id/tv_elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="5"
        android:layout_below="@id/tv_title"
        android:background="@drawable/badge_bg2"
        android:layout_alignEnd="@id/iv_mood_elevated"
        android:padding="0dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal" />

</RelativeLayout>