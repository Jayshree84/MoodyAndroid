<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp"
    android:background="@drawable/white_corner_bg"
    android:padding="@dimen/_15sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_add_assessment" />

    <include layout="@layout/view_premium_btn" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/circularstd_black"
        android:text="@string/assess_your_mental_wellbeing"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_18ssp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:fontFamily="@font/circularstd_book"
        android:text="@string/score_outdated"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_11ssp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/circularstd_book"
        android:text="@string/three_mins"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_10ssp" />


</RelativeLayout>