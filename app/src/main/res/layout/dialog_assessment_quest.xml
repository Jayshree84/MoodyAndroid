<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corner_bg"
    android:padding="@dimen/_15sdp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/circularstd_black"
        android:text="@string/goal_title"
        android:textColor="@color/boarding_text"
        android:textSize="@dimen/_16ssp"
        android:textStyle="normal" />

    <RelativeLayout
        android:id="@+id/layout_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/option_val_bg"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="2"
            android:textAllCaps="true"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/tv_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/tv_option3"
            android:background="@drawable/option_val_bg"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/tv_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/tv_option2"
            android:background="@drawable/option_val_bg"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/tv_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@id/tv_option3"
            android:background="@drawable/option_val_bg"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="3"
            android:textAllCaps="true"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_20ssp"
            />

        <TextView
            android:id="@+id/tv_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_option4"
            android:background="@drawable/option_val_bg"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="4"
            android:textAllCaps="true"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/tv_not_at_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_option1"
            android:layout_alignStart="@id/tv_option1"
            android:layout_alignEnd="@id/tv_option1"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/circularstd_book"
            android:gravity="center"
            android:text="@string/not_at_all"
            android:textAllCaps="true"
            android:textColor="@color/tertaryColor"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:id="@+id/tv_most_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_option5"
            android:layout_toEndOf="@id/tv_option4"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/circularstd_book"
            android:gravity="start"
            android:text="@string/most_of_the_time2"
            android:textAllCaps="true"
            android:textColor="@color/tertaryColor"
            android:textSize="@dimen/_9ssp"

            />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        style="@style/RegBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_options"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/ic_btn_bg"
        android:gravity="center"
        android:text="@string/text_done"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />


</RelativeLayout>