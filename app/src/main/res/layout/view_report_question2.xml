<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.health.mental.mooditude.custom.Circle
        android:id="@+id/circle_risk"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:circleColor="@color/risk_high" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/circularstd_book"
        android:gravity="end"
        android:text="Highddfdfdfdfdfd"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_short_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toStartOf="@id/tv_answer"
        android:layout_toEndOf="@id/circle_risk"
        android:fontFamily="@font/circularstd_book"
        android:text="depressidfdf dgfg
        dfdfdfdfdfddfdfdfdfdfdon_risk"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_short_text"
        android:layout_alignStart="@id/circle_risk"
        android:layout_alignEnd="@id/tv_answer"
        android:background="@color/light_seperator"/>


</RelativeLayout>