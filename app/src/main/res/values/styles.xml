<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/boarding_text</item>
        <item name="fontFamily">@font/circularstd_black</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/circularstd_black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Base application theme -->
    <style name="AppTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/page_background
        </item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">@color/black_main</item>-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:fastScrollOverlayPosition">atThumb</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!--For navigation drawer menu item height-->
        <item name="listPreferredItemHeightSmall">@dimen/_35sdp</item>
    </style>

    <!-- Base application theme -->
    <style name="FullScreenTheme" parent="AppTheme">
    <item name="android:windowFullscreen">true</item>
    </style>

    <style name="HomePageTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/btn_green</item>
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="drawerArrowStyle">@style/MyDrawerArrowToggleStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="MyDrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primaryColor</item>
    </style>


