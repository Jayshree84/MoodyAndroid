    <style name="RegEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="colorControlNormal">@color/edit_text_bg</item>
        <item name="colorControlActivated">@color/edit_text_bg</item>
        <item name="colorControlHighlight">@color/edit_text_bg</item>
        <item name="android:textColorHighlight">@color/btn_green</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="ErrorText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/ic_btn_bg</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/circularstd_book</item>

    </style>

    <style name="RegBtnStyle2" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/ic_btn_light_border</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/circularstd_book</item>

    </style>

