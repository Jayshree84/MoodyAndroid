    <style name="OptionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="DialogStyle2" parent="Theme.AppCompat.Light.Dialog">
        <!--No title-->
        <item name="windowNoTitle">true</item>

        <!--Background transparency -->
        <item name="android:windowIsTranslucent">true</item>
        <!--Is there any coverage-->
        <item name="android:windowContentOverlay">@null</item>
        <!--whether floating-->
        <item name="android:windowIsFloating">true</item>
        <!--Border-->
        <item name="android:windowFrame">@null</item>
        <!--Background: Transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog whether the background of the entire screen has a barrier layer -->
        <item name="android:backgroundDimEnabled">false</item>
        <!--Animation-->
        <!--<item name="android:windowAnimationStyle">@style/normalDialogAnim</item>-->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:listChoiceIndicatorMultiple">@drawable/radio_flat_selector</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/brand_yellow</item>
    </style>

    <style name="BottomNavigationText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@drawable/bottom_selection_color</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="AutoCompleteTextViewDropDown">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:fontFamily">@font/circularstd_black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="DescTextStyle">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DescCaptionTextStyle">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/secondaryColor</item>
        <item name="colorControlActivated">@color/brand_yellow</item>
    </style>
</resources>